#menu.off-canvas.position-left.header_mobile(data-off-canvas data-transition="overlap" data-auto-focus="false")
    .header_mobile_top
        .header_mobile_top_logo
            img(src="assets/img/logo_min.svg", alt="EGO Systems")
        button.header_mobile_top_close(aria-label='Закрыть' data-close)
            +icon('close', [24, 24], '#fff')
        button.header_mobile_top_button(data-open="popup")
            +icon('chat', [24, 24], '#fff')
    .header_mobile_menu
        +menu('vertical')
    .header_mobile_contact
        +details
    .header_mobile_bottom
        button.button.primary.expanded(data-open="popup")
